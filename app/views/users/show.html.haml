- model_class = User
.page-header
  %h1= @user.name
.row
  .col-md-6
    .well
      =link_to 'View on map', root_path(pilots: @user.id)
  .col-md-6
    .well
      %strong
        - if @user.most_recent_flight
          Most Recent Flight Created At: #{@user.most_recent_flight.created_at.strftime('%b %e, %Y %H:%M:%S %z')}
        - else
          No recent flight data

%dl.dl-horizontal

= link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn btn-default'
- if @user == current_user
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-default'
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
