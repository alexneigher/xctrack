%script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyBDAmzYeQpRVm_0ajvbf5GVqgislxyTqKc"}

.row
  .col-md-9
    .map-container
      #googleMap{style: 'width:100%;height:500px;'}
      #loading
        Loading...

  .col-md-3
    .well

      %ul.list-group
        =render partial: 'pilots_on_map'
        =render partial: 'group_select'

        =render partial: 'time_select'
      .form-group
        = link_to root_path(pilots: @users.map(&:id).join(',')), class: 'btn btn-sm btn-primary' do
          Show All

#coordinates
  - @coordinates.each do |flight|
    .pilot
      - flight.each do |waypoint|
        .waypoint{data:{latitude: waypoint[:latitude], longitude: waypoint[:longitude], name:  waypoint[:name], velocity:  waypoint[:velocity], timestamp: waypoint[:timestamp], elevation:  waypoint[:elevation], text: waypoint[:text] || 'N/A'}}


