%script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyBDAmzYeQpRVm_0ajvbf5GVqgislxyTqKc"}

.row
  .col-md-9
    #googleMap{style: 'width:100%;height:500px;'}

  .col-md-3
    .well

      %ul.list-group
        -@users.each do |user|
          %li.list-group-item
            .row
              .col-xs-4.col-md-6
                -if @rendered_user_ids.include?(user.id)
                  .btn.btn-success.btn-block
                    on map
                -else
                  = link_to root_path(pilot_ids: (@rendered_user_ids + [user.id]).join(',')), class: ' btn btn-default btn-block' do
                    add
              .col-xs-8.col-md-6
                .text-center
                  = link_to user.name, user_path(user)
      .form-group
        = link_to root_path(pilot_ids: @users.map(&:id).join(',')), class: 'btn btn-sm btn-primary' do
          Show All
