.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        Sign Up
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            .row
              .col-md-6
                %label Name &ast;
                = f.text_field :name, placeholder: 'Alex Boolean', class: 'form-control'
              .col-md-6
                %label Email
                = f.email_field :email, placeholder: 'alex@flyfar.com', class: 'form-control'
          .form-group
            .row.well
              %label
                = f.radio_button :tracker_type, 'in_reach_user', checked: true
                InReach Share URL
                .form-inline
                  http://www.share.delorme.com/
                  = f.text_field :share_url, class: 'form-control radio-control'
              %hr
              %label
                = f.radio_button :tracker_type, 'spot_user'
                SPOT URL
                .form-inline
                  http://share.findmespot.com/shared/faces/viewspots.jsp?glId=
                  = f.text_field :share_url, class: 'form-control radio-control'
          .form-group
            .row
              .col-md-6
                %label Password
                %em min length 6
                = f.password_field :password, autocomplete: "off", class: 'form-control'
              .col-md-6
                %label Confirm Password
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
          .form-group
            .row
              .col-md-6
                = f.submit "Sign up", class: 'btn btn-success'
        = render "devise/shared/links"


:javascript
  $(function(){
    $('input.radio-control').focus(function(){
      $('.radio-control').not(this).val('')
    })
  })
